@model DailyPlan  
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Günlük Plan Oluştur</h2>
    </div>
    <form role="form" asp-action="Create" asp-controller="Daily" method="post" enctype="multipart/form-data">

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="form-group">
                            <label>Plan Ekle</label>
                            <input asp-for="dailyPlan" type="text" class="form-control" placeholder="Plan açıklaması girin" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Oluştur</button>
        </div>
    </form>
</div>

